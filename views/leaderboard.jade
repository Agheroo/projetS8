extends layout

block form

    table.leaderboard
        thead
        tr
            th Rang 
            th Nom 
            th Score moyen 
            th Meilleur temps
        each user in users 
            tr
                td #{user.rank}
                td #{user.name}
                td #{user.avgScore}
                td #{user.bestScore}


